doctype html

html(lang="en" prefix="og: https://ogp.me/ns#")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0")
        - const me = 'https://trang.design'
        meta(property="og:type" content="website")
        meta(property="og:url" content=`${me}${page.url}`)
        - let metatitle = title ? `${title} \u2014 Trang Le` : 'Trang Le'
        title= metatitle
        meta(property="og:title" content=metatitle)
        if info
            meta(property="og:image" content=`${me}${info.thumb}`)
        else
            meta(property="og:image" content=`${me}/assets/genericthumb.jpg`)
        if desc
            meta(name="description", content=desc)
            meta(property="og:description", content=desc)
        else
            meta(name="description", content="A visual designer specializing in branding and editorial.")
            meta(property="og:description", content="A visual designer specializing in branding and editorial.")
        link(href="/css/layout.css" rel="stylesheet")
        //- For all browsers
        link(href="/assets/icons/favicon-16px.png" type="image/png" rel="icon" sizes="16x16")
        link(href="/assets/icons/favicon-32px.png" type="image/png" rel="icon" sizes="32x32")

        //- Google
        link(href="/assets/icons/favicon-48px.png" type="image/png" rel="icon" sizes="48x48")
        link(href="/assets/icons/favicon-192px.png" type="image/png" rel="icon" sizes="192x192")

        //- iPhone and iPad
        link(href="/assets/icons/favicon-hi.png" type="image/png" rel="apple-touch-icon" sizes="180x180")
        link(href="/assets/icons/favicon-167px.png" type="image/png" rel="apple-touch-icon" sizes="167x167")
    body
        .cover
            header
                .thinboi#header
                    a(href='/')
                        .cata.replacements
                            span Trang Le
                            img.icon(src="/assets/icon.svg" alt="logo")
                    nav.cluster
                        a.anim-underline(href='/') Work
                        a.anim-underline(href='/extra') Extra
                    nav.cluster
                        a.anim-underline(href='/about') About
                        a.anim-underline(href='/contact') Contact
            main.stack
                .thinboi.stack
                    block text
                    block content
                div
                    block overflow
            footer
                .thinboi
                    img(src="/assets/icon.svg", alt="icon", style="height: 0.75rem")
                    p.fit
                        small &#169; 2022 Trang Le. All rights reserved.